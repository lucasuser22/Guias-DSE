# Establece la imagen base de .NET 8 SDK para construir la aplicaci칩n
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copia los archivos de proyecto y restaura las dependencias
COPY DockerMVC/*.csproj DockerMVC/
WORKDIR /app/DockerMVC
RUN dotnet restore

# Copia el resto de los archivos y compila la aplicaci칩n
COPY . .
RUN dotnet publish -c Release -o /out

# Establece la imagen base para el entorno de runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /out .

# Exponer el puerto en el que se ejecutar치 la aplicaci칩n
EXPOSE 80

# Comando de inicio
ENTRYPOINT ["dotnet", "DockerMVC.dll"]
